{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "inlineSourceMap": true,
      "inlineSources": true,   
      "experimentalDecorators": true,  
      "emitDecoratorMetadata": true,
      "lib": [
        "es5",
        "es6",
        "es7",
        "es2017",
        "dom"
      ],
      /* Strict Type-Checking Options */        
      "strict": true,                       
      "noImplicitAny": true,                
      "strictNullChecks": true,             
      "noImplicitThis": true,                
      "alwaysStrict": true,                
      "noUnusedLocals": true,                
      "noUnusedParameters": true,            
      "noImplicitReturns": true,             
      "noFallthroughCasesInSwitch": true
    },
    "exclude": [
      "node_modules"
    ]
  }